{
  "name": "comments-benchmark",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "wrangler pages dev .",
    "serve:benchmark": "serve -p 8788 ./benchmark-output",
    "serve:static": "serve -p 8788 ./dist",
    "autocannon": "node ./run-autocannon.js",
    "autocannon:islands": "autocannon -d=30 https://comments-benchmark.pages.dev/islands/10",
    "autocannon:local:islands": "autocannon -d=30 http://127.0.0.1:8788/islands/10",
    "print:comments-box-plot": "node --loader ts-node/esm ./scripts/print-comments-box-plot.ts",
    "print:comments-sizes": "node --loader ts-node/esm ./scripts/print-comments-sizes.ts",
    "print:ecommerce-box-plot": "node --loader ts-node/esm ./scripts/print-ecommerce-box-plot.ts",
    "print:ecommerce-sizes": "node --loader ts-node/esm ./scripts/print-ecommerce-sizes.ts",
    "lighthouse:blog:desktop": "FORM_FACTOR=desktop playwright test tests/blog.spec.ts",
    "lighthouse:blog:mobile": "FORM_FACTOR=mobile playwright test tests/blog.spec.ts",
    "lighthouse:ecommerce": "node --loader ts-node/esm ./tests/ecommerce.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nanoid": "^5.0.7",
    "rmfr": "^2.0.0",
    "wrangler": "^3.79.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@playwright/test": "^1.47.2",
    "@types/node": "^22.7.4",
    "@types/rmfr": "^2.0.5",
    "autocannon": "^7.15.0",
    "glob": "^11.0.0",
    "lighthouse": "^12.2.1",
    "mkdirp": "^3.0.1",
    "playwright": "^1.47.2",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.3.3",
    "puppeteer": "^23.4.1",
    "serve": "^14.2.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
